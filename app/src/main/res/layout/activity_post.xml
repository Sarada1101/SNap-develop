<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.PostActivity">

        <EditText
            android:id="@+id/postTextMultiLine"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/textbox"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="Autofill" />

        <ImageButton
            android:id="@+id/photoImageButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/postTextMultiLine"
            app:srcCompat="@android:drawable/ic_menu_gallery" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/anonymousSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/anonymousSwitch"
            app:layout_constraintStart_toEndOf="@+id/photoImageButton"
            app:layout_constraintTop_toBottomOf="@+id/postTextMultiLine"
            tools:ignore="MissingConstraints"
            tools:text="匿名投稿　" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/dangerSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dangerSwitch"
            app:layout_constraintEnd_toEndOf="@+id/anonymousSwitch"
            app:layout_constraintStart_toStartOf="@+id/anonymousSwitch"
            app:layout_constraintTop_toBottomOf="@+id/anonymousSwitch"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/postFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="64dp"
            android:clickable="true"
            android:contentDescription="@string/postFABContentDescription"
            android:focusable="true"
            android:src="@android:drawable/ic_menu_send"
            android:tint="#00FFFFFF"
            app:fabSize="auto"
            android:onClick="onClick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toEndOf="@+id/anonymousSwitch"
            app:layout_constraintTop_toBottomOf="@+id/postTextMultiLine"
            app:maxImageSize="40dp"
            app:rippleColor="#00FFFFFF"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@android:drawable/ic_menu_send" />

        <LinearLayout
            android:id="@+id/buttonLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/timelineImageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_recent_history"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/mapImageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_location_on_24"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/userImageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_account_circle_24"
                tools:ignore="ContentDescription" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

    </data>
</layout>

